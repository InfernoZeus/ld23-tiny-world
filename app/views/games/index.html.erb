<h1>Listing games</h1>

<table>
  <tr>
    <th>Players</th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.players.map {|p| p.user.email}.join(", ") %></td>
    <td><%= link_to 'Play!', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
